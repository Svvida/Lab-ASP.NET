@model List<Lab4.Models.EmployeeModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h2>Employee List</h2>
<p>
    <a asp-action="Create">Add new employee</a>
</p>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>PESEL</th>
                <th>Position</th>
                <th>Department</th>
                <th>Hire Date</th>
                <th>Termination Date</th>
                <th>Priority</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.PESEL</td>
                    <td>@employee.Position</td>
                    <td>@employee.Department</td>
                    <td>@employee.HireDate.ToShortDateString()</td>
                    <td>@employee.TerminationDate.ToShortDateString()</td>
                    <td>@employee.Priority</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@employee.Id">Details</a> |
                        <a asp-action="Edit" asp-route-id="@employee.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No employees to display.</p>
}