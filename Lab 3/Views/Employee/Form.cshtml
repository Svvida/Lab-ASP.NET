@model EmployeeModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Add Employee";
}
<h2>Add Employee</h2>
<form asp-action="Create" asp-controller="Employee" method="post">
    <div asp-validation-summary="All"></div>

    <div>
        <label asp-for="FirstName">First Name</label>
        <div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <input class="form-control" type="text" asp-for="FirstName" />
    </div>

    <div>
        <label asp-for="LastName">Last Name</label>
        <div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <input class="form-control" type="text" asp-for="LastName" />
    </div>

    <div>
        <label asp-for="PESEL">PESEL</label>
        <div>
            <span asp-validation-for="PESEL" class="text-danger"></span>
        </div>
        <input class="form-control" type="text" asp-for="PESEL" />
    </div>

    <div>
        <label asp-for="Position">Position</label>
        <div>
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
        <input class="form-control" type="text" asp-for="Position" />
    </div>

    <div>
        <label asp-for="Department">Department</label>
        <div>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
        <input class="form-control" type="text" asp-for="Department" />
    </div>

    <div>
        <label asp-for="HireDate">Hire Date</label>
        <div>
            <span asp-validation-for="HireDate" class="text-danger"></span>
        </div>
        <input class="form-control" type="date" asp-for="HireDate" />
    </div>

    <div>
        <label asp-for="TerminationDate">Termination Date</label>
        <div>
            <span asp-validation-for="TerminationDate" class="text-danger"></span>
        </div>
        <input class="form-control" type="date" asp-for="TerminationDate" />
    </div>

    <button type="submit">Save</button>
</form>